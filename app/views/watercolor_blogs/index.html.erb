<% if false %>
 <tbody>
    <% @watercolor_blogs.each do |watercolor_blog| %>
      <tr>
        <td><%= watercolor_blog.title %></td>
        <td><%= watercolor_blog.description %></td>
       <td><%= watercolor_blog.created %></td>
       <td><%= link_to 'Show', watercolor_blog %></td>
       <td><%= link_to 'Edit', edit_watercolor_blog_path(watercolor_blog) %></td>
       <td><%= link_to 'Destroy', watercolor_blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
     </tr>
    <% end %>
  </tbody>
 </table> 
 <% end %>

